<form id="changepassword" method="post" action="~/User/changepassword">
    <label>Current Password<span style="color: red">*</span></label>
    <input type="password" name="currentpass" class="form-control">
    <br>
    <label>New Password<span style="color: red">*</span></label>
    <input type="password" name="newpass" class="form-control">
    <br>
    <label>Confirm Password<span style="color: red">*</span></label>
    <input type="password" name="cpass" class="form-control">
    <br>
    <div style="text-align: right">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Discard</button>
        <button type="submit" class="btn btn-primary" id="update">Save changes</button>
    </div>
    </form>
    <script>
        $('#changepassword').unbind('submit').on('submit', function (e) {
            e.preventDefault();
            var formData = new FormData(this);
            $this = $(this);
            $.validator.unobtrusive.parse($this);
            var isValid = $(this).valid();
            if (!isValid) {
                $(this).find(':submit').removeAttr('disabled');
                return false;
            }
            else {
                $(this).find(':submit').attr('disabled', 'disabled');
            }
            $.ajax({
                url: $(this).attr("action"),
                method: "post",
                data: formData,
                beforeSend: function () {
                    // setting a timeout
                    $("#loading").show();
                },
                contentType: false,
                processData: false,
                success: function (data) {
                    $(this).find(':submit').removeAttr('disabled');
                    $('#submit').prop("disabled", false);

                    if (data.successMessage) {

                        swal({
                            position: 'top-end',
                            type: 'success',
                            title: 'Successfully Updated !',
                            showConfirmButton: false,
                            timer: 2000
                        });
                        $("loginmodal").modal("hide");
                        window.location.reload();
                    }
                    if (data.errorMessage) {

                        swal(
                           'Sorry',
                           data.errorMessage,
                           'error'
                         )
                        $("#update").removeAttr('disabled');
                        $('#submit').prop("disabled", false);
                    }


                },
                error: function (data) {
                    $(this).find(':submit').removeAttr('disabled');
                    $('#submit').prop("disabled", false);
                    if (data.errorMessage) {

                        swal(
                           'Sorry',
                           data.errorMessage,
                           'error'
                         )
                        $(this).find(':submit').removeAttr('disabled');
                        $('#submit').prop("disabled", false);
                    }
                    else {
                        $('#submit').prop("disabled", false);
                        swal(
                           'Sorry',
                            'Something went wrong',
                           'error'
                         )
                        $(this).find(':submit').removeAttr('disabled');
                        $('#submit').prop("disabled", false);

                    }


                },
                complete: function () {
                    $('#submit').prop("disabled", false);
                    // hide image here
                    $("#loading").hide();
                }
            });

        });
    </script>
