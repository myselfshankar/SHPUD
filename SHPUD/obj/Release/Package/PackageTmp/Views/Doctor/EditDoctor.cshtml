                        @Html.ValidationMessageFor(model => model.SPECIALIZATION, "", new { @class = "text-danger" })

                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.DOCTOR_DESCRIPTION, htmlAttributes: new { @class = "control-label" })

                        @Html.TextAreaFor(model => model.DOCTOR_DESCRIPTION, new { @cols = "100", @rows = "6", @style = "width:100%;", htmlAttributes = new { @class = "form-control", @placeholder = "General Physician" } })
                        @Html.ValidationMessageFor(model => model.DOCTOR_DESCRIPTION, "", new { @class = "text-danger" })

                    </div>
                </div>
