                    <div class="form-group">
                        @Html.LabelFor(model => model.GENDER, htmlAttributes: new { @class = "control-label" })
                        <br />
                        @Html.RadioButtonFor(model => model.GENDER, "M", new { @checked = true, htmlAttributes = new { @class = "form-control" } }) <label>Male</label>
                        @Html.RadioButtonFor(model => model.GENDER, "F", new { htmlAttributes = new { @class = "form-control" } }) <label>Female</label>



                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.DOCTOR_IMAGE, htmlAttributes: new { @class = "control-label" })

                        <input type="file" name="filename" class="form-control" />
                        @Html.HiddenFor(model => model.DOCTOR_IMAGE, new { htmlAttributes = new { @class = "form-control", @placeholder = "Butwal Hospital" } })
                        @Html.ValidationMessageFor(model => model.DOCTOR_IMAGE, "", new { @class = "text-danger" })

