                        @Html.ValidationMessageFor(model => model.DOCTOR_EDUCATION, "", new { @class = "text-danger" })

                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.DOCTOR_SPECIALIZATION_DETAILS, htmlAttributes: new { @class = "control-label" })

                        @Html.TextAreaFor(model => model.DOCTOR_SPECIALIZATION_DETAILS, new { @cols = "100", @rows = "3", @style = "width:100%;", htmlAttributes = new { @class = "form-control", @placeholder = "Butwal Hospital" } })
                        @Html.ValidationMessageFor(model => model.DOCTOR_SPECIALIZATION_DETAILS, "", new { @class = "text-danger" })

